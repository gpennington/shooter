package src.shooter {	import flash.display.MovieClip;	//import flash.events.Event;	//import flash.geom.Point;	//import src.shooter.Projectile;	import src.core.Game;	public class Bullet extends Projectile{		public function Bullet(shooter, a, s, p, _isExplosive){			super(shooter, a, s, p);			isExplosive = _isExplosive;			life = 96		}		override public function move(){						super.move();						//speed x radians			y += speed * Math.sin((angle - 90) * (Math.PI / 180));			x += speed * Math.cos((angle - 90) * (Math.PI / 180));								}		override public function kill(){						if ( isExplosive ){				//Add Explode				var explosion:Explosion = new Explosion(5, shooter.friendly);				explosion.x = x;				explosion.y = y;				Game.currentLevel.topLayer.addChild(explosion);			}			super.kill();					}		override public function remove(){						//Remove from Array//			for (var i=0; i < ShooterGame.bulletList.length; i++) {//				if( ShooterGame.bulletList[i]==this) { ShooterGame.bulletList.splice(i,1) }//			}			super.remove();					}					}}