package src.shooter {	import flash.display.MovieClip;	import flash.events.Event;		import src.core.Game;	public class Mine extends ShooterGameObject{				public function Mine(_shooter){			shooter = _shooter;			x = shooter.x;			y = shooter.y;			super();		}		override public function behavior():void{											if ( counter >= 96 ){								var explosion:Explosion = new Explosion(5, shooter.friendly);				explosion.x = x;				explosion.y = y;				Game.currentLevel.addChild(explosion);					remove();			}		}			}}