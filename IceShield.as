package src.shooter {	import flash.display.MovieClip;	import flash.events.*	import flash.filters.GlowFilter;	import src.core.Game;		public class IceShield extends ShooterGameObject{		//		var shooter; //		public var friendly:Boolean; //should be dynamic				public function IceShield(_shooter){			ShooterGame.magicList.push(this);			shooter = _shooter;			//trace(shooter);			x = _shooter.x			y = _shooter.y;			rotation = _shooter.rotation;			friendly = _shooter.friendly;			isVunerable = true;			//Length and Health			hp = 50 + ( 10 * shooter.abilityLevel );//			var glow:GlowFilter = new GlowFilter(0x3333ff, 0.75, 20, 20, 3);//			var filtersArray = [glow];			var glow:GlowFilter = new GlowFilter(0x9999ff, 0.5, 25, 25, 5);			var filtersArray = [glow];			filters = filtersArray;						cracks0.visible = false;			cracks1.visible = false;		}		public override function behavior():void {						x = shooter.x;			y = shooter.y;			rotation = shooter.rotation;						if ( hp < 40){				cracks0.visible = true;			}			if ( hp < 20){				cracks1.visible = true;			}			if ( hp <= 0){				remove();			}						//hp--;		}		override public function kill(){									remove();		}		override public function remove(){									var effect:AbilityEffect = new AbilityEffect("blue");			effect.x = x;			effect.y = y;			Game.currentLevel.middleLayer.addChild(effect);  			shooter.hasIceShield = false;						//Remove from Array			for(var i=0; i < ShooterGame.magicList.length; i++)			{				if(ShooterGame.magicList[i]==this) { ShooterGame.magicList.splice(i,1) };			}						//trace("ice shield removed");			super.remove();		}			}}