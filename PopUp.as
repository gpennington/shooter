package src.shooter {	import flash.display.MovieClip;	import flash.events.Event;	import src.core.Game;	public class PopUp extends MovieClip{				var life:int = 1;		var duration:int;		public function PopUp(m, c=0xffff00, d=12){									addEventListener(Event.ENTER_FRAME, onFrame, false, 0, true);			tf.text = m;			tf.textColor = c;			duration = d;		}		private function onFrame(e:Event){								grow();						if ( life >= duration ){				remove();				//trace("pop up removed");			}			else{				life++;			}		}		private function grow(){			scaleX = scaleY += 0.05;		}				public function remove(){			removeEventListener(Event.ENTER_FRAME, onFrame);			Game.remove(this);		}	}//popup}