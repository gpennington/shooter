package {	import flash.display.MovieClip;	import flash.display.Shape;	import flash.events.*	import flash.text.TextField;	import flash.text.TextFormat;		public class Transition extends MovieClip{		var bg:Shape;		var txt:TextField;		var tf:TextFormat;		var counter:int = 0;		public function Transition (){						alpha = 0;			mouseEnabled = false;			mouseChildren = false;			bg = new Shape();			bg.graphics.beginFill(0x000000, 1);			bg.graphics.drawRect(0,0,640,640);			bg.graphics.endFill();			addChildAt(bg,0);						tf = new TextFormat();			tf.color = 0xffffff;			tf.letterSpacing = 8;			tf.font = "Helvetica";			tf.align = "center";			tf.italic = true;			tf.size = 32;						txt = new TextField();			txt.x = 0;			txt.y = 320;			txt.width = 640;			txt.defaultTextFormat = tf;			addChildAt(txt, 1)					}		public function begin(message){						addEventListener(Event.ENTER_FRAME, onFrame, false, 1, true);			alpha = 1;			counter = 0;			txt.text = message;			Game.isPaused = true;					} 		private function onFrame(e:Event){						if ( counter < 96){				//hang out, display message			}						if ( counter >= 96 ){				this.alpha -= 0.04;			}						if ( counter >= 121 ){				removeEventListener(Event.ENTER_FRAME, onFrame);				counter = 0;				Game.isPaused = false;			}						counter++;					}	}}